<view class="content"><view><button data-event-opts="{{[['tap',[['openBluetooth',['$event']]]]]}}" class="button" bindtap="__e">开始搜索</button><button data-event-opts="{{[['tap',[['closeBluetooth',['$event']]]]]}}" class="button" bindtap="__e">关闭蓝牙适配器</button><button data-event-opts="{{[['tap',[['write160Model',['$event']]]]]}}" class="button" bindtap="__e">打印160模版</button><button data-event-opts="{{[['tap',[['write180Model',['$event']]]]]}}" class="button" bindtap="__e">打印180模版</button><button data-event-opts="{{[['tap',[['writeImage',['$event']]]]]}}" class="button" bindtap="__e">打印全黑图片</button><button data-event-opts="{{[['tap',[['writeLogo',['$event']]]]]}}" class="button" bindtap="__e">打印Logo</button></view><view class="venues_list"><block wx:for="{{pen}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="venues_item"><text class="status">{{"设备名称:"+item.name}}</text><text class="status">{{"设备别名:"+item.localName}}</text><text class="status">{{"设备ID:"+item.deviceId}}</text><text class="status">{{"连接状态:"+(connectedDeviceId==item.deviceId?"已连接":"未连接")}}</text><view class="section"></view><view class="section"><button class="button" type="warn" data-event-opts="{{[['tap',[['connectTO',['$0'],[[['pen','',index,'deviceId']]]]]]]}}" bindtap="__e">连接</button></view></view></block></block></view></view>