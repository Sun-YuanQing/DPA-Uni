<view hidden="{{!(show)}}" class="uni-auth-view"><view class="uni-mask" style="{{'top:'+(offsetTop+'px')+';'}}"></view><view class="uni-modal"><view class="uni-modal__hd"><view class="uni-modal__title _strong">{{title}}</view></view><view class="uni-modal__bd"><uni-card vue-id="1" is-full="{{true}}" title="异常信息" bind:__l="__l" vue-slots="{{['default']}}"><textarea style="width:auto;max-height:80px;" maxlength="-1" disabled data-event-opts="{{[['input',[['__set_model',['$0','description','$event',[]],['lockModel']]]]]}}" value="{{lockModel.description}}" bindinput="__e"></textarea></uni-card><view style="height:10px;background-color:transparent;"></view><uni-card vue-id="2" is-full="{{true}}" title="提示信息" bind:__l="__l" vue-slots="{{['default']}}"><view class="uni-common-mt"><view class="input-group"><view class="uni-list-cell"><view class="uni-list-cell-left">账号：</view><view class="uni-list-cell-db input-row"><input class="uni-input" type="text" focus="{{true}}" placeholder="请输入账号" data-event-opts="{{[['input',[['__set_model',['','userID','$event',[]]]]]]}}" value="{{userID}}" bindinput="__e"/></view></view><view class="uni-list-cell"><view class="uni-list-cell-left">密码：</view><view class="uni-list-cell-db input-row"><input class="uni-input" type="password" placeholder="请输入密码" data-event-opts="{{[['input',[['__set_model',['','userPass','$event',[]]]]]]}}" value="{{userPass}}" bindinput="__e"/></view></view><view class="uni-list-cell"><view class="uni-list-cell-left">备注：</view><view class="uni-list-cell-db input-row uni-textarea" style="height:90px;"><textarea class="uni-input" value="{{remark}}"></textarea></view></view></view></view></uni-card></view><view class="uni-modal__ft"><view data-event-opts="{{[['tap',[['onUnAgree',['$event']]]]]}}" class="uni-modal__btn uni-modal__btn_default" style="color:rgb(0, 0, 0);" bindtap="__e">拒绝</view><view data-event-opts="{{[['tap',[['onAgree',['$event']]]]]}}" class="uni-modal__btn uni-modal__btn_primary" style="color:rgb(0, 122, 255);" bindtap="__e">同意</view></view></view></view>