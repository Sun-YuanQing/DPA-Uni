
.index-menus-view {
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 999;
	display: block;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.index-menus-view .uni-mask {
	position: fixed;
	z-index: 998;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background-color: rgba(0, 0, 0, 0);
}
.index-menus-view .uni-list { 
	position: absolute;
	z-index: 999;
	width: auto;
	right: 0; 
	background-color: #fff;
	border-radius: 3px;
	border: 1rpx solid #c8c7cc;
	-webkit-box-shadow: 1rpx 2rpx 4rpx rgba(0, 0, 0, .3);
	        box-shadow: 1rpx 2rpx 4rpx rgba(0, 0, 0, .3);
	overflow: hidden;
	text-align: center;
}
.flex-item {  
	text-align: center; 
	margin-left: 5px;
}

